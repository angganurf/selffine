<script>
    $('.check-all').on('click', function(event) {
        $('input:checkbox').not(this).prop('checked', this.checked);
    });
    $('.delete-checkbox, .check-all').change(function(event) {
        $('.delete-selected').attr('disabled', false);
        $('.delete-selected').find('span').text(' (' + $('.delete-checkbox:checked').length + ')');
    });
    $('.delete-selected').on('click', function(event) {
        event.preventDefault();
        action_type = $('#action_type').val();
        if (action_type == 'mark_safe') {
            $('#SelectedDeleteModal').find('.modal-body').html('Are you sure that you want to mark safe the selected report(s)?');
            $('#SelectedDeleteModal').find('#exampleModal1Label').html('mark safe report(s)');
        }
        else{
            $('#SelectedDeleteModal').find('.modal-body').html('Are you sure that you want to '+action_type+' the selected post(s)?');
            $('#SelectedDeleteModal').find('#exampleModal1Label').html(action_type+' post(s)');
        }
        $('#SelectedDeleteModal').modal('show');
    });
    function DeleteSelected() {
        action_type = $('#action_type').val();
        data = new Array();
        $('td input:checked').parents('tr').each(function () {
            data.push($(this).attr('data_selected'));
        });
        $('.delete-selected').attr('disabled', true);
        $('.delete-selected').text('Please wait..');
        $.post(acpajax_url('delete_multi_post_report'), {ids: data,type: action_type}, function () {
            if (action_type == 'delete') {
                $.each( data, function( index, value ){
                    $('#list-' + value).remove();
                });
            }
            else{
                location.reload();
            }
            $('.delete-selected').text('Submit');
        });
    }
    function MarkSafe(id,type = 'show'){
        if (type == 'hide') {
            $('#DeleteModal').find('.btn-secondary').attr('onclick', "MarkSafe('"+id+"')");
            $('#DeleteModal').modal('show');
            return false;
        }
        $('#list-' + id).fadeOut(300, function() {
            $(this).remove();
        });
        $.post(acpajax_url('delete-report'), {id:id,t:2});
    }
    function DeletePost(id,type = 'show'){
        if (type == 'hide') {
            id = $('#list-' + id).attr('data-post');
            $('#DeleteModal2').find('.btn-primary').attr('onclick', "DeletePost('"+id+"')");
            $('#DeleteModal2').modal('show');
            return false;
        }
        $('[data-post="'+id+'"]').fadeOut(300, function() {
            $(this).remove();
        });
        $.post(acpajax_url('delete-post'), {id:id});
    }
</script>